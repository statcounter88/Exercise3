import pandas as pd

# File path for the dataset
file_path = 'C:\Users\rmala\Downloads\STA24W_Ex3_3_RadioFluxes.dat'

# Step 1: Import the dataset
# Skip the header row starting with # and load the data into a DataFrame
data = pd.read_csv(file_path, delim_whitespace=True, comment='#', header=None, names=['mJy', 'G', 'R'])

# Step 2: Sum the columns 'G' and 'R'
data['Sum'] = data['G'] + data['R']

# Step 3: Normalize the summed values
# Normalization: (value - min) / (max - min)
data['Normalized_Sum'] = (data['Sum'] - data['Sum'].min()) / (data['Sum'].max() - data['Sum'].min())

# Display the resulting DataFrame
print(data.head())

# Save the results to a new file
output_file = '/mnt/data/Normalized_RadioFluxes.csv'
data.to_csv(output_file, index=False)
print(f"Normalized data saved to {output_file}")
